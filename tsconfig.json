{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    // TODO:允许 JavaScript 文件成为程序的一部分,这个要在改完之后取消注释
    // "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "extensions": [".mjs", ".js", ".ts", ".jsx", ".tsx", ".json"],
  "exclude": ["dist", "node_modules"]
}
